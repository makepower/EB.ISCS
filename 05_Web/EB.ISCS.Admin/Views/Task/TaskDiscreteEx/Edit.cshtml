@using EB.ISCS.Admin.Models
<!DOCTYPE html>
<html>
<head>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    <script src="~/viewscript/task/discretetask/edit.js"></script>
    <meta charset="utf-8" />
    <title>表单预览</title>
</head>
<body>
    <div class="container" ng-app="DiscreteTaskEditApp" ng-controller="DiscreteTaskEditController" ng-init="onload(@ViewBag.Id)">
        <form class="form-horizontal" role="form" w5c-form-validate="" novalidate name="validateForm">
            <div class="modal-body">
                <div class="form-group">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">表单名称</label>
                        <div class="col-md-4">
                            <input class="form-control" type="text" ng-model="fo.Name" name="forms_Name" maxlength="20" ng-required="true" />
                        </div>
                        <label class="col-sm-2 control-label">是否冻结</label>
                        <div class="col-md-4">
                            <label class="radio-inline">
                                <input name="UserIsFreeze" type="radio" value="0" ng-model="fo.Enabled" ng-checked="true">启用
                            </label>
                            <label class="radio-inline">
                                <input name="UserIsFreeze" type="radio" value="1" ng-model="fo.Enabled">冻结
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">所属分类 @Html.RequiredFlag()</label>
                        <div class="col-md-4">
                            <select id="dicType" class="form-control easyui-combotree" name="DicTypeId" ng-model="fo.DicTypeId" style="width: 280px; height: 35px;" ng-required="true"></select>
                        </div>
                        <label class="col-sm-2 control-label">是否启用有效期</label>
                        <div class="col-md-4">
                            <label class="radio-inline">
                                <input name="IsExpireDate" ng-checked="true" type="radio" value="1" ng-model="fo.UseTimeState">是
                            </label>
                            <label class="radio-inline">
                                <input name="IsExpireDate" type="radio" value="0" ng-model="fo.UseTimeState">否
                            </label>
                        </div>

                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">有效期开始</label>
                        <div class="col-md-4">
                            <input class="form-control" type="text" id="forms_UseStartTime" ng-model="fo.UseStartTime" name="forms_UseStartTime"
                                   maxlength="10" readonly />
                        </div>
                        <label class="col-sm-2 control-label">有效期截止</label>
                        <div class="col-md-4">
                            <input class="form-control" type="text" id="forms_UseStopTime" ng-model="fo.UseStopTime" name="forms_UseStopTime"
                                   maxlength="10" readonly />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">编码</label>
                        <div class="col-md-4">
                            <input class="form-control" type="text" id="forms_Code" ng-model="fo.Code" name="forms_Code" maxlength="10" min="{{fo.Code}}" />
                        </div>
                        <label class="col-sm-2 control-label">版本</label>
                        <div class="col-md-4">
                            <input class="form-control" type="text" ng-model="fo.Version" name="forms_Version" maxlength="10" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">备注</label>
                        <div class="col-sm-10">
                            <textarea ng-model="fo.Remark" class="form-control" style="height:80px;" maxlength="4000"></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btn_Save" class="btn btn-primary" w5c-form-submit="onSave()">保存</button>
                <button id="btn_return" class="btn btn-default" ng-click="onclose()">返回</button>
            </div>
        </form>
    </div>
</body>
</html>
