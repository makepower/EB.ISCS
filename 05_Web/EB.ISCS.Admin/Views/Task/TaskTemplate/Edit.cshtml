@using EB.ISCS.Admin.Models
<!DOCTYPE html>
<html>
<head>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    <script src="~/ViewScript/task/tasktemplate/edit.js"></script>
    <meta charset="utf-8" />
    <title>表单预览</title>
</head>
<body>
    <div class="container" ng-app="TaskTemplateEditApp" ng-controller="TaskTemplateEditController" ng-init="onload(@ViewBag.Id)">
        <form class="form-horizontal" role="form" w5c-form-validate="" novalidate name="validateForm">
            <div class="modal-body">
                <div class="form-group">
                    <label class="col-sm-2 control-label">任务名称 @Html.RequiredFlag()</label>
                    <div class="col-md-10">
                        <input class="form-control" type="text" ng-model="template.Name" name="template_Name" maxlength="20" ng-required="true" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">任务分类</label>
                    <div class="col-md-4">
                        <label class="radio-inline">
                            <input name="IsSimple" type="radio" value="0" ng-model="template.IsSimple" ng-checked="true">单独任务
                        </label>
                        <label class="radio-inline">
                            <input name="IsSimple" type="radio" value="1" ng-model="template.IsSimple">复合任务
                        </label>
                    </div>
                    <label class="col-sm-2 control-label">执行分类</label>
                    <div class="col-md-4">
                        <label class="radio-inline">
                            <input name="ExecType" type="radio" value="1" ng-model="template.ExecType">自理型任务
                        </label>
                        <label class="radio-inline">
                            <input name="ExecType" type="radio" value="2" ng-model="template.ExecType" ng-checked="true">指派型任务
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">所属部门 @Html.RequiredFlag()</label>
                    <div class="col-md-4">
                        <select id="DepId" class="form-control easyui-combotree" name="DepId" ng-model="template.DepId" style="width: 280px; height: 35px;" ng-required="true"></select>
                    </div>
                    <label class="col-sm-2 control-label">是否冻结</label>
                    <div class="col-md-4">
                        <label class="radio-inline">
                            <input name="UserStatus" type="radio" value="0" ng-model="single.Status" ng-checked="true">启用
                        </label>
                        <label class="radio-inline">
                            <input name="UserStatus" type="radio" value="1" ng-model="single.Status">冻结
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">所属业务 @Html.RequiredFlag()</label>
                    <div class="col-md-4">
                        <select id="DicTypeId" class="form-control easyui-combotree" name="DicTypeId" ng-model="template.DicTypeId" style="width: 280px; height: 35px;" ng-required="true"></select>
                    </div>
                    <label class="col-sm-2 control-label">是否启用有效期</label>
                    <div class="col-md-4">
                        <label class="radio-inline">
                            <input name="IsExpireDate" ng-checked="true" type="radio" value="1" ng-model="template.IsDateLimit">是
                        </label>
                        <label class="radio-inline">
                            <input name="IsExpireDate" type="radio" value="0" ng-model="template.IsDateLimit">否
                        </label>
                    </div>

                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">有效期开始</label>
                    <div class="col-md-4">
                        <input class="form-control" type="text" id="template_UseStartTime" ng-model="template.UseStartTime" name="template_UseStartTime"
                               maxlength="10" readonly />
                    </div>
                    <label class="col-sm-2 control-label">有效期截止</label>
                    <div class="col-md-4">
                        <input class="form-control" type="text" id="template_UseStopTime" ng-model="template.UseStopTime" name="template_UseStopTime"
                               maxlength="10" readonly />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">编码</label>
                    <div class="col-md-4">
                        <input class="form-control" type="text" id="template_Code" ng-model="template.Code" name="template_Code" maxlength="10" min="{{template.Code}}" />
                    </div>
                    <label class="col-sm-2 control-label">版本</label>
                    <div class="col-md-4">
                        <input class="form-control" type="text" ng-model="template.Version" name="template_Version" maxlength="10" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">备注</label>
                    <div class="col-sm-10">
                        <textarea ng-model="template.Remark" class="form-control" style="height:80px;" maxlength="4000"></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btn_Save" class="btn btn-primary" w5c-form-submit="onSave()">保存</button>
                <button id="btn_return" class="btn btn-default" ng-click="onclose()">返回</button>
            </div>
        </form>
    </div>
</body>
</html>
