@model EB.ISCS.Common.ViewModel.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width,minimum-scale=1.0,maximum-scale=1.0,initial-scale=1.0,user-scalable=no" />
    <title>登录页面</title>
    <link href="~/Scripts/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    @Scripts.Render("~/Scripts/jQuery/jQuery-2.2.4.min.js")
    @*<script src="~/Scripts/jquery-2.2.3.js"></script>*@
    <script src="~/Scripts/bootstrap/js/bootstrap.min.js"></script>
    <link href="~/Content/loginStyle/Login.css" rel="stylesheet" />
    <script type="text/javascript">
//解决iframe下系统超时无法跳出iframe框架的问题
if (window != top)
top.location.href = location.href;

        var visitorLogin =function()
        {
         $.ajax({
                type : "POST", //提交方式
                url : "/Account/VisitorLogin",//路径
                data : {}
                });
        }
    </script>
</head>
<body>
    <div class="content">
        <div class="title">
            <h3>欢迎登录</h3>
            <p>请输入用户名和密码:</p>
        </div>
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { name = "loginform", @class = "bs-example bs-example-form", role = "form" }))
        {
            @*<form name="loginform" class="bs-example bs-example-form" role="form" action="/Account/Login" method="post">*@
            <div class="loginform">
                <div class="form-group ">
                    <span class="sr-only">用户名</span>
                    <input type="text" name="LoginName" class="form-control" placeholder="帐号..." ng-model="" value="@Model.LoginName">
                </div>
                <div class="form-group">
                    <span class="sr-only">密码</span>
                    <input type="password" name="Password" class="form-control" placeholder="密码..." ng-model="" value="@Model.Password">
                </div>

                @*<div class="form-group yzminput input-group-lg">
                        <input type="text" class="form-control ">
                        <button type="button" class="btn yzm btn-default">获取验证码</button>
                    </div>*@

            </div>

            <div class="loginbtn">
                @*<div class="messg" style="display:none;">&nbsp;<span class="glyphicon glyphicon-exclamation-sign"></span>&nbsp;<span>请输入账号和密码</span></div>*@
                @Html.ValidationMessage("CredentialError", new { style = "color:red;" })
                <button type="submit" class="btn">
                    &nbsp;&nbsp;登&nbsp;&nbsp;&nbsp;录&nbsp;&nbsp;
                </button>
            </div>
            <div class="right" style="width:80px;float: right;">
                <a href="javascript:visitorLogin()" class="right-align">游客登录</a>
            </div>
            @*</form>*@
        }
    </div>
    <div class="bottom">
        <div class="copyright">
            电商数据监控与分析平台copyright@2018
        </div>
    </div>
</body>
</html>
