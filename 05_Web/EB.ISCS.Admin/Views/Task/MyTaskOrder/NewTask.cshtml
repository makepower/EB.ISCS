@using EB.ISCS.Admin.Models
<!DOCTYPE html>
<html>
<head>

    @*@Styles.Render("~/Content/css")*@
    @Scripts.Render("~/bundles/jquery")
    <script src="~/ViewScript/task/mytaskorder/newtask.js"></script>
    <meta charset="utf-8" />
    <title>任务执行</title>

    @*样式改为动态加载*@
    <link href="~/Scripts/EB.ISCSDesigner/forms/css/EB.ISCS.designpreview.css" rel="stylesheet" />
    <link href="~/Scripts/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Scripts/bootstrap/css/bootstrapValidator.min.css" rel="stylesheet" />
    @*<link href="~/Scripts/layer/skin/layer.css" rel="stylesheet" />*@
    <link href="~/Scripts/datetimepicker/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <link href="~/Scripts/jquery-easyui-1.4.5/themes/bootstrap/easyui.css" rel="stylesheet" />

    <script src="~/Scripts/ClientConst.js"></script>
    <script src="~/ViewScript/common/commonControl.js"></script>
    <script src="~/Scripts/layer/layer.js"></script>
    <script src="~/Scripts/bootstrap/js/bootstrapValidator.min.js"></script>
    <script src="~/Scripts/jquery-easyui-1.4.5/jquery.easyui.min.js"></script>
    <script src="~/Scripts/bootstrap/js/bootstrapValidator.min.js"></script>
    <script src="~/Scripts/datetimepicker/bootstrap-datetimepicker.js"></script>
    <script src="~/Scripts/EB.ISCSDesigner/EB.ISCSDesign.Config.js"></script>
    <script src="~/Scripts/EB.ISCSDesigner/EB.ISCSDesign.all.js"></script>
    <script src="~/Scripts/EB.ISCSDesigner/forms/EB.ISCSPreView.js"></script>
</head>
<body>
    <div class="container" ng-app="NewTaskEditApp" ng-controller="NewTaskEditController" ng-init="onload(@ViewBag.Id,@ViewBag.EditType)">

        <form class="form-horizontal" role="form" w5c-form-validate="" novalidate name="validateForm">
            <div style="width: 100%;height:600px;overflow-y: auto; padding: 20px;" id="preViewDiv" ng-show="SelfProcessing">
            </div>
            <div class="modal-body" ng-show="!SelfProcessing">
                <div class="form-group">
                    @*任务信息*@
                    <div class="form-group">
                        <label class="col-sm-2 control-label">任务名称 @Html.RequiredFlag()</label>
                        <div class="col-md-4">
                            <input class="form-control" type="text" ng-model="flowInfo.Name" name="single_Name" maxlength="20" ng-required="true" />
                        </div>
                        <label class="col-sm-2 control-label">任务编码</label>
                        <div class="col-md-4">
                            <input class="form-control" type="text" ng-model="flowInfo.TaskCode" name="single_TaskCode" maxlength="20" />
                        </div>
                    </div>
                    @*起止时间点*@
                    <div class="form-group">
                        <label class="col-sm-2 control-label">开始时间</label>
                        <div class="col-md-4">
                            <input class="form-control" type="text" id="forms_UseStartTime" ng-model="flowInfo.StartTime" name="single_UseStartTime"
                                   maxlength="10" readonly />
                        </div>
                        <label class="col-sm-2 control-label">结束时间</label>
                        <div class="col-md-4">
                            <input class="form-control" type="text" id="forms_UseStopTime" ng-model="flowInfo.EndTime" name="single_UseStopTime"
                                   maxlength="10" readonly />
                        </div>
                    </div>
                    @*备注*@
                    <div class="form-group">
                        <label class="col-sm-2 control-label">执行人</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" ng-model="UserName" name="single_Name" maxlength="20" ng-required="true" />
                            <button id="btn_return" class="btn btn-default" ng-click="onSelectElp()">选择人员</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <div class="modal-footer" style="text-align: center; bottom:0px;">
            <button id="btn_Save" class="btn btn-primary" ng-click="onSave()">提交</button>
            <button id="btn_return" class="btn btn-default" ng-click="onclose()">取消</button>
        </div>
    </div>
</body>
</html>
