<!DOCTYPE html>
<html>
<head>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    <script src="~/ViewScript/project/businessprojectstage/edit.js"></script>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <div class="container" ng-app="EditApp" ng-controller="EditController" ng-init="onload(@ViewBag.Id)">
        <form class="form-horizontal" role="form" w5c-form-validate="" novalidate name="validateForm">
            <div class="modal-body">
                <div class="form-group">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">阶段名称</label>
                        <div class="col-md-4">
                            <input class="form-control" type="text" ng-model="model.Name" name="Name" maxlength="20" ng-required="true" />
                        </div>
                        <label class="col-sm-2 control-label">所属项目</label>
                        <div class="col-md-4">
                            <select id="project" ng-model="model.ProjectId" name="Project" style="width: 290px; height: 35px;"></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">负责人</label>
                        <div class="col-md-4">
                            <select id="leader" ng-model="model.Leader" name="Leader" style="width: 290px; height: 35px;"></select>
                        </div>
                        <label class="col-sm-2 control-label">阶段排序</label>
                        <div class="col-md-4">
                            <input class="form-control" type="number" ng-model="model.Sort" name="Sort" ng-maxlength="1" ng-minlength="1" ng-required="true" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btn_Save" class="btn btn-primary" w5c-form-submit="onSave()">保存</button>
                <button id="btn_return" class="btn btn-default" ng-click="onclose()">返回</button>
            </div>
        </form>
    </div>
</body>
</html>

