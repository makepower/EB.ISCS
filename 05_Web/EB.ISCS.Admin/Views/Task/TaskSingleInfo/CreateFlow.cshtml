<!DOCTYPE html>
<html>
<head>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Scripts/datetimepicker/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <link href="~/Scripts/EB.ISCSDesigner/gooflow/fonts/iconflow.css" rel="stylesheet" />
    <link href="~/Scripts/EB.ISCSDesigner/gooflow/GooFlow.css" rel="stylesheet" />

    <script src="~/ViewScript/flow/FlowTemplate/edit.js"></script>
    <script src="~/Scripts/datetimepicker/bootstrap-datetimepicker.js"></script>
    <script src="~/Scripts/EB.ISCSDesigner/gooflow/GooFlow.js"></script>
    <script src="~/Scripts/EB.ISCSDesigner/gooflow/GooFunc.js"></script>

    <script src="~/ViewScript/task/tasksingleinfo/createflow.js"></script>
    @*<script src="~/Scripts/EB.ISCSDesigner/EB.ISCSConfig.js"></script>
        <script src="~/Scripts/EB.ISCSDesigner/gooflow/EB.ISCSGFun.js"></script>*@

    <script src="~/Scripts/EB.ISCSDesigner/EB.ISCSDesign.Config.js"></script>
    <script src="~/Scripts/EB.ISCSDesigner/EB.ISCSDesign.Property.js"></script>
    <script src="~/Scripts/EB.ISCSDesigner/EB.ISCSDesign.Flow.js"></script>
    <link href="~/Scripts/EB.ISCSDesigner/css/main.css" rel="stylesheet" />

    <style type="text/css">
        .left_div {
            width: 80%;
            float: left;
        }

        .right_div {
            width: 19.5%;
            float: left;
            padding: 0 10px;
        }
    </style>
</head>
<body>
    <div class="container" ng-app="TaskSingleInfoFlowApp" ng-controller="TaskSingleInfoFlowController" ng-init="onload(@ViewBag.Id)" style="margin:10px 0px 0px 0px; width:100%; height:100%; padding:5px;">
        <div style="margin-bottom:10px;">
            <div class="btn-group" role="group" aria-label="...">
                <button id="btn_save" class="btn btn-default" data-permisson="actionbutton">
                    <i class="fa fa-save"></i> 保存
                </button>
                <button id="btn_pre" class="btn btn-default">导出</button>
                <button id="btn_add" class="btn btn-default" data-permisson="actionbutton"><i class="fa fa-plus"></i> 新增</button>
                <button id="btn_refresh" class="btn btn-default" data-permisson="actionbutton"><i class="fa fa-refresh"></i> 刷新</button>
                <input type="hidden" name="MenuId" id="MenuId" value="@ViewBag.MenuId" />
            </div>
        </div>
        <div class="left_div">
            <div id="flowCanvas" style="width:100%;"></div>
        </div>
        <div class="right_div">
            <p style=" border-bottom:1px solid #ddd; margin:0px;  background:#f1f1f1; padding :5px 10px;">属性设置</p>
            <div id="property"></div>
        </div>
    </div>
</body>
</html>
