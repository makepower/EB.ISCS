<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    <script src="~/viewscript/project/groupuser/index.js"></script>
    <title>项目组列表</title>
</head>

<body ng-app="ListApp" ng-controller="ListController">
    <div style="margin:10px 0px; padding:5px;">
        <div style="margin-bottom:10px;">
            <div class="btn-group" role="group" aria-label="...">
                <button id="btn_add" class="btn btn-default" data-permisson="actionbutton" ng-click="add()">新建</button>
                <button id="btn_edit" class="btn btn-default" data-permisson="actionbutton">编辑</button>
                <button id="btn_del" class="btn btn-default" data-permisson="actionbutton">删除</button>
                <button id="btn_open_search" class="btn btn-default" data-permisson="actionbutton">搜索</button>
                <button id="btn_refresh" class="btn btn-default" data-permisson="actionbutton">刷新</button>
            </div>
        </div>
        <table id="jqGrid"></table>
        <div id="jqGridPager"></div>
    </div>

    <div class="contextMenu row" id="contextMenu" style="display:none;">
        <ul>
            <li id="del">
                <span class="glyphicon glyphicon-trash" style="float:left"></span>
                <span style="font-size:100%; font-family:Verdana;margin-left:10px;">Delete Row</span>
            </li>
        </ul>
    </div>

    <div style="display:none" id="divSerrch">
        <form class="form-horizontal" role="form" id="search_form">
            <div class="modal-body">
                <div class="form-group">
                    <label class="col-sm-2 control-label">员工编号</label>
                    <div class="col-sm-4">
                        <input type="text" name="EmployeeCode" class="form-control" id="txt_EmployeeCode" placeholder="员工编号">
                    </div>
                    <label class="col-sm-2 control-label">中文名</label>
                    <div class="col-sm-4">
                        <input type="text" name="FullName" class="form-control" id="txt_FullName" placeholder="中文名">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="reset" class="btn btn-default"><span class="glyphicon glyphicon-refresh" aria-hidden="true"></span>清空</button>
                <button type="button" id="btn_search" class="btn btn-primary" data-dismiss="modal"><span class="glyphicon glyphicon-search" aria-hidden="true"></span>搜索</button>
            </div>
        </form>
    </div>
</body>
</html>
