<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title> 店铺管理 新增/编辑页面</title>
</head>
<body>
    <div class="wrapper" ng-app="ShopApp" ng-controller="ShopController" ng-init="onload('@ViewBag.Id')">
        <input value="@ViewBag.Id" ng-model="id" type="hidden" id="hidn_id" />
        <div class="container">
            <form class="form-horizontal" role="form" id="search_form" w5c-form-validate="" novalidate name="validateForm">
                <div class="modal-body">
                    <div class="form-group">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">店铺名称</label>
                            <div class="col-md-4">
                                <input class="form-control" type="text" ng-model="Shop.Name" name="ShopName" maxlength="20" required />
                            </div>
                            <label class="col-sm-2 control-label">店铺编码</label>
                            <div class="col-md-4">
                                <input class="form-control" type="text" ng-model="Shop.Code" name="Code" maxlength="100" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">所属平台</label>
                            <div class="col-md-4">
                                <select class="form-control" ng-model="Shop.Plat" ng-options="p.id as p.name for p in plats" id="Plat" name="Plat" required></select>
                            </div>
                            <label class="col-sm-2 control-label">注册时间</label>
                            <div class="col-md-4">
                                <input class="form-control" id="txt_InDate" name="txt_InDate" type="text" ng-model="Shop.InDate" >
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">App令牌</label>
                            <div class="col-md-4">
                                <input class="form-control" type="text" ng-model="Shop.AppKey" name="AppKey" required />
                            </div>
                            <label class="col-sm-2 control-label">App密钥</label>
                            <div class="col-md-4">
                                <input class="form-control" type="text" ng-model="Shop.AppSecret" name="AppSecret" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">发货地址 </label>
                            <div class="col-md-4">
                                <input name="ActionType" class="form-control" type="text" ng-model="Shop.DeliveryAddress" maxlength="500">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">简介</label>
                            <div class="col-sm-10">
                                <textarea ng-model="Shop.Description" name="Description" class="form-control" style="height:100px;" maxlength="4000"></textarea>
                            </div>
                        </div>
                    </div>
                    <input id="DataDictionaryId" type="hidden" name="MenuId" ng-model="Shop.MenuId" />

                </div>
                <div class="modal-footer">
                    <button id="btn_Save" class="btn btn-primary" w5c-form-submit="onSave()">保存</button>
                    <button id="btn_return" class="btn btn-default" ng-click="onclose()">返回</button>
                </div>
            </form>
        </div>
    </div>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    <script src="~/viewscript/Biz/shopbusiness/edit.js"></script>
</body>
</html>