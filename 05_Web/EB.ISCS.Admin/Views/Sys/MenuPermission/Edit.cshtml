
<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>功能操作（系统按钮）新增/编辑页面</title>
</head>
<body>
    <div class="wrapper" ng-app="MenuPermissionApp" ng-controller="MenuPermissionController" ng-init="onload('@ViewBag.Id')">
        <input value="@ViewBag.Id" ng-model="id" type="hidden" id="hidn_id" />
        <div class="container">
            <form class="form-horizontal" role="form" id="search_form" w5c-form-validate="" novalidate name="validateForm">
                <div class="modal-body">

                    <input name="CompanyId" id="CompanyId" type="hidden" value="@ViewBag.CompanyId" />
                    <div class="form-group">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">操作名称</label>
                            <div class="col-md-4">
                                <input class="form-control" type="text" ng-model="menuPermission.ActionName" name="ActionName" maxlength="20" required />
                            </div>
                            <label class="col-sm-2 control-label">按钮编码</label>
                            <div class="col-md-4">
                                <input class="form-control" type="text" ng-model="menuPermission.ActionCode" name="ActionCode" maxlength="100" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">控制器Key</label>
                            <div class="col-md-4">
                                <input class="form-control" type="text" ng-model="menuPermission.ControllerKey" name="ControllerKey" maxlength="20"  />
                            </div>
                            <label class="col-sm-2 control-label">操作Key</label>
                            <div class="col-md-4">
                                <input class="form-control" type="text" ng-model="menuPermission.ActionKey" name="ActionKey" maxlength="100"  />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">操作类型 </label>
                            <div class="col-md-4">
                                <label class="radio-inline">
                                    <input name="ActionType" type="radio" value="1" ng-model="menuPermission.ActionType" checked >按钮
                                </label>
                                <label class="radio-inline">
                                    <input name="ActionType" type="radio" value="2" ng-model="menuPermission.ActionType">选项卡
                                </label>
                            </div>
                            @*<label class="col-sm-2 control-label">是否可用</label>
                            <div class="col-md-4">
                                <label class="radio-inline">
                                    <input name="Enabled" type="radio" value="1" ng-model="menuPermission.Enabled" checked >启用
                                </label>
                                <label class="radio-inline">
                                    <input name="Enabled" type="radio" value="0" ng-model="menuPermission.Enabled">禁用
                                </label>
                            </div>*@
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">操作说明</label>
                            <div class="col-sm-10">
                                <textarea ng-model="menuPermission.Description" name="Description" class="form-control" style="height:100px;" maxlength="4000"></textarea>
                            </div>
                        </div>
                    </div>
                    <input id="DataDictionaryId" type="hidden" name="MenuId" ng-model="menuPermission.MenuId" />

                </div>
                <div class="modal-footer">
                    <button id="btn_Save" class="btn btn-primary" w5c-form-submit="onSave()">保存</button>
                    <button id="btn_return" class="btn btn-default" ng-click="onclose()">返回</button>
                </div>
            </form>
        </div>
    </div>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    <script src="~/viewscript/sys/menupermission/edit.js"></script>
</body>
</html>